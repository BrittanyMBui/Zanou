<body class="user-profile">



    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>

    <nav style="opacity: 0.70; margin-top: 750px;" id="nav-bar" class="navbar navbar-expand-lg navbar-dark bg-dark fixed-bottom">
        <div class="container-fluid">
        <a class="navbar-brand" href="/"> <i class="bi bi-flower2"></i> Zanou</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDarkDropdown" aria-controls="navbarNavDarkDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDarkDropdown">
            <ul class="navbar-nav">
            <li class="nav-item dropup">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDarkDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="fas fa-bars"></i>
                </a>
                <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="navbarDarkDropdownMenuLink">
                <li><a class="dropdown-item" href="/users/profile/entries/new">Add a new Entry</a></li>
                <li><a class="dropdown-item" href="/users/profile/logout">Log Out</a></li>
                </ul>
            </li>
            </ul>
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
                <div class="container">
                <a id="entry-edit" class="navbar-brand" href="/users/profile/entries/new"> <i class="fas fa-pen-alt"></i> Add a new Entry</a>
                </div>
            </nav> 
            
            <div id="delete-btn">
                <form  action="/users/profile?_method=DELETE" method="post">
                    <button id="delete-button" class="btn btn-primary btn-block" type="submit" value="Delete Account" onclick="return confirm('Are you sure you want to delete your account?');"> <i class="fas fa-user-slash"></i> Delete Account</button>
                </form>
            </div>

            </nav>




    <div class="profile-header">
        <h1 class="gradient-text">Welcome back, <%= user.username %></h1>
    </div>

    <div class="user-entries">
        <h2 class="entries-gradient">Reflect on your entries so far:</h2>
    </div> 
    
    <div class="entry-list">

        <ol>
            <% user.entries.forEach((entry)=>{ %>
                <li>
                    <a id="entry-li" href="/users/profile/entries/<%= entry._id %>"><%= entry.title %></a>
                </li>
            <% }) %>
    </ol>
    </div>


    

