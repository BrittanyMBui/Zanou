<body class="login"> 

    <div id="login-form" class="container">
        <br><br>

        <div id="user-login" class="offset-md-3 col-md-6 mt-5 pl-3 bg-light rounded shadow-lg border border-dark">
            <h1 class="mt-2 pt-5 text-center font-italic">Sign In</h1>
            <form action="/users/login" method="POST">
                <div class="input-group mt-5 mb-5 shadow-sm">
                    <span class="input-group-text fa fa-user"></span>
                    <input type="text" id="email" name="email" class="form-control" placeholder="Email Address" required="">
                </div>

                <div class="input-group mt-5 shadow-sm">
                    <span class="input-group-text fa fa-lock"></span>
                    <input type="password" id="password" name="password" class="form-control" placeholder="Password" required="">
                </div>

                <center>
                    <button class="btn btn-lg btn-primary btn-block mt-5"> &nbsp;&nbsp;&nbsp;&nbsp;Sign In&nbsp;&nbsp;&nbsp;</button>
                </center>

            <br><br><br>    

            </form>

        </div>


    </div>




























